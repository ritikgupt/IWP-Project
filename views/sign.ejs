<%-include('./partials/header')%>
<div  id="f" class="ui main text container segment">
    <div class="card">
<form id="d" class="ui form" action="/sign" method="POST">
    <div class="field">
        <label>Username</label>
        <input type="text" name="username" placeholder="abc">
    </div>
    <div class="field">
        <label>Email</label>
        <input type="email" name="email" placeholder="abc@yandex.xom">
    </div>
    <div class="field">
        <label>Password</label>
        <input type="password" name="password" placeholder="Minimum 10 characters" required minlength="10">

    </div>
    <div class="field">
        <label>Address</label>
        <input type="text" name="address" placeholder="">
    </div>
    <div class="field">
        <label>Mobile Number</label>
        <input type="text" name="mobile" placeholder="9999999999" required  pattern="[0-9]{10}" minlength="10" maxlength="10">
    </div>
    </div>
    <button  class="ui blue basic button" type="submit" onsubmit="return register()">Submit</button>
</form>
</div>
</div>
