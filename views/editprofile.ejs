<%-include('./partials/header')%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Your Details</div>
<form class="ui form" action="/shops/<%=currentUser.userid%>/profile" method="POST">
<div class="field">
    <label>Username</label>
    <input type="text" name="username" value="<%=currentUser.username%>" disabled>
    </div>
   
<div class="field">
        <label>Email</label>
    <input type="email" name="email" value="<%=currentUser.email%>" disabled>
</div>
<div class="field">
        <label>Address</label>
    <input type="text" name="address" value="<%=currentUser.address%>" required>
</div>
<div class="field">
        <label>Mobile Number</label>
    <input type="text" name="mobile" value="<%=currentUser.mobile%>" required  pattern="[0-9]{10}" minlength="10" maxlength="10">
</div>
<div class="field">
    <input type="text" name="id" value="<%=user._id%>" id="ab">
</div>
    <button class="ui button" type="submit">Submit</button>
</form>
</div>
<style>
    #ab{
        visibility:hidden;
    }
   
</style>
<%-include('./partials/footer.ejs')%>